#include<stdio.h>
#include<string.h>
#define MAX 100
int main(){
    char description[MAX];
    char keyword[100];
    int len;
    printf("enter the course description:\n");
    scanf("%s",description);
    len=strlen(description);
    printf("enter the keyword to search:\n");
    scanf("%s",keyword);
    if (strstr(description,keyword))
    printf("keyword'%s' found in the %s course description.\n",keyword,description);
    else
    printf("keyword '%s' is not found in the '%s' not found in the %s course description.\n",keyword,description);
}
