#include <stdio.h>
int main(){
    char first[50]="vidya",last[50]="vinuta",full[100];
    int i=0,j=0,length=0,maxlength=20;
    while(first[i]!='\0')
    {full[length++]=first[i++];
    }
    full[length++]=' ';
    while(last[j]!='\0')
    full[length++]=last[i++];
    full[length]='\0';
    printf("full name:%s\n",full);
    printf("length:%d\n",length);
    if(length>20)
    printf("name too long for screen.\n");
    else
    printf("name fits the screen.\n");
  }
